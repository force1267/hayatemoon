{
  "kind": "collectionType",
  "collectionName": "restaurants",
  "info": {
    "name": "restaurant"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "owner": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "dishes": {
      "via": "restaurant",
      "collection": "dish"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "factors": {
      "collection": "factor",
      "via": "restaurant"
    },
    "offPrice": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 100
    },
    "orders": {
      "collection": "order",
      "via": "restaurant"
    },
    "rate": {
      "type": "float",
      "max": 5
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "fastfood",
        "cafe",
        "restaurant",
        "iranian_food",
        "turkish_food"
      ]
    }
  }
}

{
  "kind": "collectionType",
  "collectionName": "restaurants",
  "info": {
    "name": "restaurant"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "owner": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "dishes": {
      "collection": "dish",
      "via": "restaurant"
    },
    "images": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "factors": {
      "collection": "factor",
      "via": "restaurant"
    },
    "offPrice": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 100
    },
    "orders": {
      "collection": "order",
      "via": "restaurant"
    },
    "rate": {
      "type": "float",
      "max": 5
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "fastfood",
        "cafe",
        "restaurant",
        "iranian_food",
        "turkish_food"
      ]
    },
    "working_hour_from": {
      "type": "time"
    },
    "working_hour_to": {
      "type": "time"
    },
    "covered_area": {
      "type": "component",
      "repeatable": false,
      "component": "address.area"
    },
    "admins": {
      "plugin": "users-permissions",
      "collection": "user"
    }
  }
}

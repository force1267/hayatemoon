{
  "kind": "collectionType",
  "collectionName": "tickets",
  "info": {
    "name": "ticket"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "tickets"
    },
    "closed": {
      "type": "boolean",
      "default": false
    },
    "ticket_messages": {
      "collection": "ticket-message",
      "via": "ticket"
    },
    "subject": {
      "type": "enumeration",
      "enum": [
        "help",
        "payment",
        "other"
      ]
    }
  }
}

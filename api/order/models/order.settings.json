{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "price": {
      "type": "integer"
    },
    "restaurant": {
      "via": "orders",
      "model": "restaurant"
    },
    "state": {
      "type": "enumeration",
      "enum": [
        "incart",
        "pending",
        "preparing",
        "delivering",
        "delivered"
      ],
      "default": "incart"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "orders"
    },
    "dish": {
      "type": "component",
      "repeatable": true,
      "component": "order.dish",
      "required": false
    },
    "address": {
      "type": "json"
    },
    "restaurantRate": {
      "type": "float",
      "max": 5
    },
    "foodRate": {
      "type": "float",
      "max": 5
    },
    "experience": {
      "type": "enumeration",
      "enum": [
        "good",
        "average",
        "bad"
      ]
    },
    "comment": {
      "type": "string"
    },
    "reply": {
      "type": "string"
    }
  }
}

{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "price": {
      "type": "integer"
    },
    "buyer": {
      "via": "order",
      "plugin": "users-permissions",
      "model": "user"
    },
    "restaurant": {
      "model": "restaurant"
    },
    "state": {
      "type": "enumeration",
      "enum": [
        "incart",
        "notpaid",
        "pending",
        "delivering",
        "delivered"
      ],
      "default": "incart"
    },
    "dishes": {
      "collection": "dish"
    }
  }
}

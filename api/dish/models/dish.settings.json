{
  "kind": "collectionType",
  "collectionName": "dishes",
  "info": {
    "name": "dish"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "restaurant": {
      "model": "restaurant",
      "via": "dishes"
    },
    "price": {
      "type": "integer"
    },
    "ingredients": {
      "type": "text"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "fastfood",
        "breakfast",
        "persian",
        "sandwich",
        "drink"
      ]
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "tags": {
      "collection": "dish-tag",
      "via": "dishes",
      "dominant": true
    },
    "rate": {
      "type": "float",
      "max": 5
    },
    "orders": {
      "type": "integer"
    }
  }
}
